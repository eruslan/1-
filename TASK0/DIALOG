АСИНХ Процедура ПриНачалеРаботыСистемы()   

	ВПР1 = Новый СписокЗначений();
	ВПР1.Добавить("Мутант");
	ВПР1.Добавить("Человек");     
	
	
	ВПР2 = Новый СписокЗначений();
	ВПР2.Добавить("Зеленые");
	ВПР2.Добавить("Красные");
	ВПР2.Добавить("Нет ухов");

	
	Вопрос1 =  Ждать ВПР1.ВыбратьЭлементАсинх("Подскажите, вы мутант или человк?");
	Если СтрДлина(Вопрос1) = 0 Тогда 
		Сообщить("С упырями не общаемся");
		Возврат;
	КонецЕсли;   
	
	Вопрос2 =  Ждать ВПР2.ВыбратьЭлементАсинх("А какого цвета ваши ушки?");
	Если СтрДлина(Вопрос2) = 0  Тогда 
		Сообщить("Упырь сгинь!");        
		Возврат;
	КонецЕсли;  
	
	Результат = "";
	Если Вопрос1.Значение = "Мутант" Тогда 
		Если Вопрос2.Значение = "Зеленые" Тогда
			Результат = Результат + "Приветствуем Великого мутанта!";
		ИначеЕсли Вопрос2.Значение =   "Красные" Тогда   
			Результат = Результат + "Вы позор нашего мутанизма, вам надо съесть ваши носки" ;
		ИначеЕсли Вопрос2.Значение = "Не Ухов" Тогда
			 Результат = Результат + "Чурка немутнская!";
		 Иначе
			 Результат= Результат + "Я не поняло";
		КонецЕсли;
	Иначе
		Результат = Результат + " вы мерзкий человчишка"  ;
	КонецЕсли;
	Сообщить("Все понятно вы "+ Вопрос1 + ", с "+ Вопрос2 + " ушами");
    Сообщить ("А думаем про вас мы, что: " + Результат )   ;
КонецПроцедуры
